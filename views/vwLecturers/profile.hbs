<div class="col-sm-10 border-0">
    <h5 class="card-header">Basic infomation</h5>

    {{#with lecturer}}
    <div class="card">

        {{!-- form change profile --}}
        <form class="p-2" method="POST" id="formChangeProfile" action="/lecturer/profile">
            <div class="form-group">
                <input type="hidden" name="id" class="form-control" id="txtID" value="{{l_ID}}">
            </div>
            <div class="form-group">
                <label for="txtName">Name</label>
                <input type="text" name="name" class="form-control" id="txtName" value="{{l_Name}}">
            </div>
            <div class="form-group">
                <label for="txtEmail">Email address</label>
                <input type="email" name="email" class="form-control" id="txtEmail" value="{{l_Email}}">
            </div>
            <div class="form-group">
                <label for="txtDOB">Date of birth</label>
                <input type="text" name="dob" class="form-control" id="txtDOB" autocomplete="off" value="{{l_DOB}}">
            </div>
            <div class="form-group">
                <label for="txtOccupation">Occupation</label>
                <input type="text" name="occupation" class="form-control" id="txtOccupation" value="{{l_Occupation}}">
            </div>
            <div class="form-group">
                <label for="txtDescription">Biography</label>
                <input type="text" name="description" class="form-control" id="txtDescription"
                    value="{{l_Description}}">
            </div>

            <div class="card-footer text-muted m-0 p-0">
                <button type="submit" class="btn btn-outline-success">
                    <i class="fa fa-check    "></i>
                    Save
                </button>
            </div>

        </form>
    </div>
    {{/with}}
</div>
